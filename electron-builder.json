{
  "appId": "com.brs.app",
  "productName": "BRS - Blender Render Suite",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "out/**/*",
    "electron/**/*",
    ".env"
  ],
  "mac": {
    "category": "public.app-category.graphics-design",
    "target": ["dmg"],
    "artifactName": "BRS-Mac-Installer-${version}.${ext}"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/app_icon.ico",
    "artifactName": "BRS-Win-Installer-${version}.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/icon.png",
    "artifactName": "BRS-Linux-Installer-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "BRS",
    "installerIcon": "public/app_icon.ico",
    "uninstallerIcon": "public/app_icon.ico",
    "installerHeaderIcon": "public/app_icon.ico",
    "artifactName": "BRS-Setup-${version}.${ext}",
    "deleteAppDataOnUninstall": true,
    "include": "installer.nsh"
  }
}
